<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl">Aliançados</h1>
    <%= link_to 'Novo Aliançado', new_membro_path, class: "rounded-full py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>  

  <div>

    <main class="flex-1 mx-4">
             
        <%= render 'membros_table', membros: @membros %>      

    </main>

  </div>

</div>
