<div id="<%= dom_id evento %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Data evento:</strong>
    <%= evento.data_evento %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tipo evento:</strong>
    <%= evento.tipo_evento_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Pessoa:</strong>
    <%= evento.pessoa_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this evento", evento, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this evento', edit_evento_path(evento), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
