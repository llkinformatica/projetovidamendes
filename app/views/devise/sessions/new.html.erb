<div class="bg-white w-full lg:w-1/3 mx-auto rounded-lg lg:my-20 px-4 py-4 shadow-lg">
    <div class="p-6 my-2 text-center">
      <p class='text-4xl' >Sistema Administrativo</p>
      <p>Projeto Vida de Mendes</p>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "contents") do |f| %>
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "w-full mb-3 px-4 py-3 border rounded-lg text-gray-700 focus:outline-none focus:border-green-500" %>
      <%= f.password_field :password, placeholder: "Senha", autocomplete: "senha atual", class: "w-full mb-3 px-4 py-3 border rounded-lg text-gray-700 focus:outline-none focus:border-green-500" %>
      <%= f.submit "Entrar", class: "bg-violet-600 text-white py-3 rounded-lg w-full font-bold text-xl tracking-wider" %>
     <% end %>
</div>

