<div class="mx-auto md:w-2/3 w-full">

<h2 class="font-bold text-4xl my-5">Acessar o Sistema</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "contents") do |f| %>
  
  <div class="my-5">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>  

  <div class="my-5">
    <%= f.label :senha %>
    <%= f.password_field :password, autocomplete: "senha atual", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>    

  <% if devise_mapping.rememberable? %>
    <div class="my-5">
      <%= f.check_box :remember_me %>
      <%= f.label :lembrar_me %>
    </div>
  <% end %>

  <div class="inline">
    <%= f.submit "Entrar", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>  

<% end %>

<%= render "devise/shared/links" %>

</div>